<div class="banner position-relative image-index">
  <%= image_tag("banner-index.jpg", alt: "Chicos usando PathFinder") %>
  <div class="content-index text-center">
    <h1 id="titulo-principal-index">Pasantías</h1>
  </div>
</div>

<div class="container text-center d-flex justify-content-center mt-5 mb-5">
  <div class="cardd-index mb-3 shadow p-2 text-center">

      <div class="search-input-index">
      <%= form_with url: internships_path, method: :get, class: "d-flex search-form-index" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control search-input-index",
              placeholder: "Ingresa puesto o ubicación"
        %>
      </div>
      <div class="container d-flex row justify-content-center">
        <div class="search-button-wrapper">
          <%= submit_tag "Buscar", name: "", class: "btn btn-primary search-button-index mt-2" %>
          <% end %>
        </div>
      </div>

  </div>
</div>





<% if current_user.role == true %>
  <div class="container">
    <% @internships.each do |internship| %>
      <h5>Puesto: <%= internship.title %></h5>
      <li>Estado: <%= internship.status %></li>
      <li>Cantidad de postulaciones: <%= internship.postulations.count %></li>
      <p><%= link_to 'Ver Postulantes', internship_path(internship) %></p>
      <p><%= link_to 'Editar', edit_internship_path(internship) %></p>
    <% end %>
  </div>

<% else %>



    <h2 class="text-center">Pasantías</h2>

    <div class="row">
      <% @internships.each do |internship| %>
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <ul>
                <button type="button" class="btn btn-light mb-2"><%= link_to internship.user.name, user_path(internship.user) %></button>
                <button type="button" class="btn btn-light mb-4"> <%= link_to internship.title, internship_path(internship) %></button>

                <li>Estado: <%= internship.status %></li>
                <li><%= "Categoría: #{internship.category}" %></li>
                <li><%= "Empresa: #{internship.user.name}" %></li>
                <li><%= "Ubicación: #{internship.city}, #{internship.country}" %></li>
                <li><%= "Tipo: #{internship.tipo}" %></li>
                <% if internship.paid %>
                  <li>Remunerada: Sí</li>
                <% else %>
                  <li>Remunerada: No</li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

<% end %>
