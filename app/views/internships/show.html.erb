			            <%= image_tag @internship.user.photo.url(crop: "fill", width: 180, height: 180), class:"rounded-circle" %> <br>
                  <h3><%= @internship.user.name %></h3>
                </div>
            </div>

            <div class="col-md-6 col-md-offset-1 col-sm-12 col-xs-12">
