                        <li>
                            <a href="">Tipo:<span><%= Internship.tipos[@internship.tipo]%></span></a>
                        </li>
                        <li>
                            <a href="">Remunerada:<span><%= @internship.paid %></span></a>
                        </li>
                        <li>
