                <h2 class="name"> <%= @internship.title %>
                    <h4>Pasantía ofertada por: <%= @internship.user.name %></h4>
                    <div class="votos">
                      <i class="fa fa-star fa-2x text-votos"></i>
                      <i class="fa fa-star fa-2x text-votos"></i>
                      <i class="fa fa-star fa-2x text-votos"></i>
                      <% if @internship.user.id == 25 %>
                        <i class="fa fa-star-half fa-2x text-votos"></i>
                        <i class="fa fa-star fa-2x text-nulo"></i>
                      <% else %>
                        <i class="fa fa-star fa-2x text-votos"></i>
                        <i class="fa fa-star-half fa-2x text-votos"></i>
                      <% end %>
                      <span class="fa fa-2x"><h5>(<%= @internship.user.rating %>) <%= @internship.user.reviews %> Votos</h5></span>
                    </div>
                </h2>
                <hr />
                <h3 class="price-container">
                  <div class="categoria">
                    <p>
                      Estado: <%= @internship.status %>
