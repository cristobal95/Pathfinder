  <div class="content text-center">
  <h2>Pathfinder</h2>
  <p>Encuentra tu camino, a través de la experiencia</p>



<div class="banner position-relative">
  <div class="image-home">
    <%= image_tag("Banner", alt: "Chica feliz con su primera pasatia") %>

    <div class="search-container">
      <%= form_with url: internships_path, method: :get, class: "d-flex search-form" do %>
        <div class="search-wrapper">
          <%= text_field_tag :query,
                params[:query],
                class: "form-control search-input",
                placeholder: "Busca trabajo, ciudad o país"
            %>
          <%= submit_tag "Buscar", name: "", class: "btn btn-primary search-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>

