          <h4><%= link_to "Ver más", internships_path, class:"btn btn-primary btn-pill"%></h4>
        </div>
      </section>

      <section id="seccion2" class="py-4 mb-0 pe-0 ps-0">
        <div class="container mt-5 w-100">
          <div class="row d-flex justify-content-evenly">
            <div class="col text-center me-2">
              <h3 class="mb-5 mt-3" id="title-section2">Pasantías Destacadas</h3>
              <div class="card-rectangular-seccion2" style="max-width: 540px;">
                <% dias = [30, 19, 4, 27, 55, 3] %>
                <% index = 0 %>
                <% @internships.each_slice(2) do |internships_slice| %>
                  <div class="row g-0">
                    <% internships_slice.each do |internship| %>
                      <% if internship.user.rating > 4.5 %>
                        <div class="col">
                          <div class="cardd mb-3 shadow p-2">
                            <div class="row g-0">
                              <div class="col d-flex">
                                <div class="col-auto">
                                  <%= image_tag internship.user.photo.url(crop: "fill", width: 40, height: 40), class:"rounded-circle" %>
                                </div>
                                <div class="col text-left">
                                  <h6 class="card-text titulo-card-seccion2" id="title-card-section2"><%= internship.title %></h6>
                                  <p class="card-title"><%= internship.user.name %></p>
                                </div>
                                <div class="col-auto ml-auto">
                                  <p class="card-text"><small><%= "#{internship.city} (#{internship.tipo})" %></small></p>
                                  <p class="card-text"><small class="text-muted"><%= "Publicada hace #{ dias[index] } días" %></small></p>
                                  <% index += 1 %>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="col text-center me-2">
              <h3 class="mb-5 mt-3" id="title-section2">Últimas Pasantías</h3>
              <div class="card-rectangular-seccion2" style="max-width: 540px;">
                <div class="row g-0">
                  <% dias = [2, 3, 8, 10, 17, 21] %>
                  <% index = 0 %>
                  <% @internships.take(6).each do |internship| %>
                    <div class="col">
                      <div class="cardd mb-3 shadow p-2">
                        <div class="row g-0">
                          <div class="col d-flex">
                            <div class="col-auto">
                              <%= image_tag internship.user.photo.url(crop: "fill", width: 40, height: 40), class:"rounded-circle" %>
                            </div>
                            <div class="col text-left">
                              <h6 class="card-text titulo-card-seccion2" id="title-card-section2"><%= internship.title %></h6>
                              <p class="card-title"><%= internship.user.name %></p>
                            </div>
                            <div class="col-auto ml-auto">
                              <p class="card-text"><small><%= "#{internship.city} (#{internship.tipo})" %></small></p>
                              <p class="card-text"><small class="text-muted"><%= "Publicada hace #{ dias[index] } días" %></small></p>
                              <% index += 1 %>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
              <p></p>
            </div>
          </div>
        </div>

      </section>


      <div class="banner position-relative">
        <div class="image-app">
          <%= image_tag("banner_app", alt: "Estudiantes usando la app") %>
          <div class="image-overlay"></div>
        </div>
        <div class="contenido">
          <%= image_tag("iphone", alt: "Iphone", class: "iphone-image") %>
        </div>
        <div>
          <h4 class="texto-banner2">Encuentra oportunidades más rápido con nuestra app</h4>
