                  <div class="card-body card-body-seccion1 text-center">
                    <div class="text-center mt-3 mb-3">
                      <%= image_tag("budget.png", alt: "logo arte", width: "80", height: "80") %>
                    </div>
                    <div class="text-center mt-4">
                      <h5 class="card-text card-text-seccion1">Finanzas y Contabilidad</h5>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                <div class="card border-light m-3 card-cuadrada shadow" style="max-width: 18rem;">
                  <div class="card-body card-body-seccion1 text-center">
                    <div class="text-center mt-3 mb-3">
                      <%= image_tag("auction.png", alt: "logo arte", width: "80", height: "80") %>
                    </div>
                    <div class="text-center mt-4">
                      <h5 class="card-text card-text-seccion1">Legal</h5>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-3 col-md-4 col-sm-6 col-12">
