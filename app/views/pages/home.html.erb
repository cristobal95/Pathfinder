  <div class="content text-center">
  <h2>Pathfinder</h2>
  <p>Encuentra tu camino, a través de la experiencia</p>



<div class="banner position-relative">
  <div class="image-home">
    <%= image_tag("Banner", alt: "Chica feliz con su primera pasatia") %>

    <div class="search-container">
      <%= form_with url: internships_path, method: :get, class: "d-flex search-form" do %>
        <div class="search-wrapper">
          <%= text_field_tag :query,
                params[:query],
                class: "form-control search-input",
                placeholder: "Busca trabajo, ciudad o país"
            %>
          <%= submit_tag "Buscar", name: "", class: "btn btn-primary search-button" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<h2>Empresas mejor evaluadas</h2>
<div class="row">
  <% @internships.each do |internship| %>
    <% if internship.user.rating > 4.5 %>
      <div class="col-md-6">
        <div class="card-product mt-5">
           <img src="<%= url_for(internship.user.photo) %>" />

          <div class="card-product-infos">
            <h2><%= internship.title %></h2>
            <p>Empresa:<%= internship.user.name %></p>
            <h5>Rating: <%= internship.user.rating %></h5>
              <h5>Rating: <%= internship.title %></h5>
            <li><%= "Categoría: #{internship.category}" %></li>

            <li><%= "Ubicación: #{internship.city}, #{internship.country}" %></li>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
</div>


</div>
