        <h1 id="titulo-principal">PathFinder</h1>
        <h5 id="subtitulo-principal">Encuentra tu camino, a través de la experiencia</h5>
      </div>
      <div class="search-container search-form">
          <div class="search-input">
            <%= text_field_tag :query,
