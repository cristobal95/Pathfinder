<div class="container" ms-5>
  <% if current_user.role == true %>
    <h2>Hola <%= @user.name %></h2><p>Aquí puedes editar tus datos</p>
  <% else %>
    <h2>Hola <%= @user.first_name %></h2><p>Aquí puedes editar tus datos</p>
  <% end %>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true, disabled: true, label: "Correo electrónico" %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>
      <% if current_user.role == true %>
        <%= f.input :name, label: "Nombre de la empresa",
                    required: false,
                    input_html: { autocomplete: "Nombre" } %>
        <%= f.input :website, label: "Sitio Web",
                    required: false,
                    input_html: { autocomplete: "Sitio web" } %>
        <%= f.input :industry, label: "Industria",
                    required: false,
                    input_html: { autocomplete: "Industria" } %>
        <%= f.input :about, label: "Descripción",
                    hint: "Descripción de la empresa",
                    required: false,
                    input_html: { autocomplete: "Descripción" } %>
        <%= f.input :city, label: "Ciudad",
                    required: false,
                    input_html: { autocomplete: "Ciudad" } %>
        <%= f.input :country, label: "País",
                    required: false,
                    input_html: { autocomplete: "País" } %>
        <div class="row">
          <div class="col-md-4">
            <%= f.input :photo, label: "Logo",
                        required: false,
                        input_html: { autocomplete: "Logo" } %>
          </div>
          <div class="col-md-4">
            <%= image_tag @user.photo.url(crop: "fill", width: 150, height: 150) %>
          </div>
        </div>

      <% else %>
        <%= f.input :first_name, label: "Nombre",
                    required: false,
                    input_html: { autocomplete: "Nombre" } %>
        <%= f.input :last_name, label: "Apellido",
                    required: false,
                    input_html: { autocomplete: "Apellido" } %>
        <%= f.input :age, label: "Edad",
                    required: false,
                    input_html: { autocomplete: "aEdadge" } %>
        <%= f.input :phone, label: "Teléfono",
                    required: false,
                    input_html: { autocomplete: "Teléfono" } %>
        <%= f.input :address, label: "Dirección",
                    required: false,
                    input_html: { autocomplete: "Dirección" } %>
        <%= f.input :city, label: "Ciudad",
                    required: false,
                    input_html: { autocomplete: "Ciudad" } %>
        <%= f.input :state, label: "Estado",
                    required: false,
                    input_html: { autocomplete: "Estado" } %>
        <%= f.input :country, label: "País", only: ['AR', 'BR', 'CL', 'CO', 'MX', 'PE', 'UY', 'EC', 'BO', 'PY', 'VE', 'TT', 'DO', 'PA', 'NI', 'HN', 'GT', 'SV', 'DM', 'CU', 'CR', 'US', 'CA'],
                    required: false,
                    input_html: { autocomplete: "País" } %>
        <%= f.input :studies, label: "Estudios",
                    required: false,
                    input_html: { autocomplete: "Estudios" } %>
        <%= f.input :college, label: "Institución educativa",
                    required: false,
                    input_html: { autocomplete: "Institución educativa" } %>
        <%= f.input :experience, label: "Experiencia",
                    required: false,
                    input_html: { autocomplete: "Experiencia" } %>
        <%= f.input :languages, label: "Idiomas",
                    required: false,
                    input_html: { autocomplete: "Idiomas" } %>
        <%= f.input :knowledges, label: "Conocimientos",
                    required: false,
                    input_html: { autocomplete: "Conocimientos" } %>
        <div class="row">
          <div class="col-md-4">
            <%= f.input :photo, label: "Foto de perfil",
                        required: false,
                        input_html: { autocomplete: "Foto de perfil" } %>
          </div>
          <div class="col-md-4">
            <%= image_tag @user.photo.url(crop: "fill", width: 150, height: 150) %>
          </div>
        </div>
      <% end %>
      <%= f.input :password, label: "Nueva contraseña",
                  hint: "dejar en blanco si no quieres cambiarla",
                  required: false,
                  input_html: { autocomplete: "nueva contraseña" } %>
      <%= f.input :password_confirmation, label: "Confirmar nueva contraseña",
                  required: false,
                  input_html: { autocomplete: "nueva contraseña" } %>
      <%= f.input :current_password, label: "Contraseña actual",
                  hint: "necesitamos tu contraseña actual para guardar los cambios",
                  required: true,
                  input_html: { autocomplete: "contraseña actual" } %>
  </div>

    <div class="form-actions">
      <%= f.button :submit, "Actualizar" %>
    </div>
  <% end %>

  <%= link_to "Volver", :back %>
</div>
