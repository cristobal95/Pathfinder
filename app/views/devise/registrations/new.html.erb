  <div class="container">
    <div class="row justify-content-center">
      <div class="col-5 p-5 pb-0">
        <div class="my-card-su shadow border">
            <img class="my-logo" src="/assets/logologin.png">
            <h2>Estás a punto de experimentar algo nuevo.</h2>

            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :email, label: "Correo Electronico",
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "Correo electrónico" }%>
                <%= f.input :password, label: "Contraseña",
                            required: true,
                            input_html: { autocomplete: "Nueva contraseña", placeholder: "#{@minimum_password_length} caracteres mínimo" } %>
                <%= f.input :password_confirmation, label: "Confirmar contraseña",
                            required: true,
                            input_html: { autocomplete: "Nueva contraseña" } %>

                  <p>Tipo de usuario:</p>
                <div class="radios">
                  <div class="field my-radio-field">
                    <%= f.radio_button :role, false, required: true %>
                    <%= label_tag :postulante do %>
                      Postulante
                    <% end %>
                  </div>

                  <div class="field my-radio-field">
                    <%= f.radio_button :role, true, required: true %>
                    <%= label_tag :empresa do %>
                      Empresa
                    <% end %>
                  </div>
                </div>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Crear cuenta" %>
              </div>
            <% end %>
            <p>Ya eres usuario? <%= render "devise/shared/links" %></p>
        </div>
      </div>

      <div class="col-6">
        <img src="/assets/signupimg.png" alt="Descripción de la imagen" width="619" height="548">
      </div>
    </div>
  </div>
