<div class="conmtainer">
  <div class="row justify-content-center">
    <div class="col-3 col-with-bg">
      <div class="my-card-su">
        <img class="my-logo" src="/assets/logologin.png">
        <h2>Bienvenido!</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" }, label: "Contraseña" %>
            <%= f.input :remember_me, label: "Recordarme", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Iniciar sesión" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <div class="col-4 p-5 pb-0">
      <img src="/assets/login.png" alt="Descripción de la imagen" width="500" height="562">
    </div>
  </div>
</div>
