<div class="container">
  <% if @usuario.empresa? %>
    <h2>Hola <%= current_user.name %></h2>
    <%= image_tag @usuario.photo.url(crop: "fill", width: 250, height: 250) %>
    <p>Nombre de Empresa: <%= @usuario.name %></p>
    <p>Sitio web: <a href="https://<%= @usuario.website %>"><%= @usuario.website %></a></p>
    <p>Industria: <%= @usuario.industry %></p>
    <p>Acerca de: <%= @usuario.about %></p>
  <% else %>
    <h2>Hola <%= current_user.first_name %>, estás viendo el perfil de <%= @usuario.first_name %> <%= @usuario.last_name %></h2>
    <%= image_tag @usuario.photo.url(crop: "fill", width: 250, height: 250) %>
    <p>Nombre: <%= @usuario.first_name %></p>
    <p>Apellido: <%= @usuario.last_name %></p>
    <p>Edad: <%= @usuario.age %></p>
    <p>Ciudad: <%= @usuario.city %></p>
    <p>País: <%= @usuario.country %></p>
    <p>Estudios realizados: <%= @usuario.studies %></p>
    <p>Unidad educativa: <%= @usuario.college %></p>
    <p>Experiencia: <%= @usuario.experience %></p>
    <p>Idioma(s): <%= @usuario.languages %></p>
    <p>Conocimientos: <%= @usuario.knowledges %></p>
  <% end %>
</div>
